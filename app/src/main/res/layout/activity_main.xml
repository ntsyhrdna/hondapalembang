<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="16dp"
    >
    <TextView
        android:id="@+id/tv_Tampilan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELAMAT DATANG \nDi APLIKASI HONDAKU"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_marginTop="60dp" />
    <TextView
        android:id="@+id/tv_ket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini menampilkan Data Data Dealer  \n di Palembang yang bakal membantu kita \n dalam mencari dealar Honda"
        android:layout_below="@+id/tv_Tampilan"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:fontFamily="sans-serif"
        android:textSize="14dp"
        android:justificationMode="inter_word"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_Tampilan"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"></ImageView>
    <Button
        android:id="@+id/btn_pindah2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mulai"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv_ket"
        android:layout_centerInParent="true" />

</RelativeLayout>